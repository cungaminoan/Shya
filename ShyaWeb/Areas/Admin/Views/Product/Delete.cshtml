@model Product

<form method="post">'
	<input asp-for="Id" hidden />
	<div class="row pb-2">
		<h2 class="text-primary">Delete Product</h2>
		<hr />
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-1 ">
			<label asp-for="Title"></label>
			<input asp-for="Title" type="text" disabled class="form-control" />
		</div>
		<div class="mb-1 ">
			<label asp-for="Description"></label>
			<input asp-for="Description" type="text" disabled class="form-control" />
		</div>
		<div class="mb-1">
			<label asp-for="ISBN"></label>
			<input asp-for="ISBN" type="text" disabled class="form-control" />
		</div>
		<div class="mb-1">
			<label asp-for="Author"></label>
			<input asp-for="Author" type="text" disabled class="form-control" />
		</div>
		<div class="mb-1">
			<label asp-for="ListPrice"></label>
			<input asp-for="ListPrice" type="text" disabled class="form-control" />
		</div>
		<div class="mb-1">
			<label asp-for="Price"></label>
			<input asp-for="Price" type="text" disabled class="form-control" />
		</div>
		<div class="mb-1">
			<label asp-for="Price50"></label>
			<input asp-for="Price50" type="text" disabled class="form-control" />
		</div>
		<div class="mb-1">
			<label asp-for="Price100"></label>
			<input asp-for="Price100" type="text" disabled class="form-control" />
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-dark ml-2 form-control">Delete</button>
			</div>
			<div class="col-6">
				<a asp-controller="Product" asp-action="Index" class="btn btn-info ml-2 form-control">Back to List</a>
			</div>
		</div>

	</div>
</form>
